{
    "telemetry.enableTelemetry": false,
    "workbench.startupEditor": "newUntitledFile",
    "editor.fontFamily": "Iosevka Lomen, JetBrains Mono Slashed, monospace",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 100],
    "editor.minimap.maxColumn": 100,
    "editor.renderLineHighlight": "gutter",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#36363A",
        "editorIndentGuide.background": "#36363A",
        "editorRuler.foreground": "#36363A"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#606060"
                }
            }
        ]
    },
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "*.mutable": {
                "underline": true,
            }
        }
    },
    "files.associations": {
        "*.pricedb": "ledger",
        "*.psd1.t": "powershell"
    },
    "[ledger]": {
        "editor.rulers": [52, 53, 65, 66, 80, 100],
    },
    "[arm-template]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.tabSize": 2
    },
    "[less]": {
        "editor.tabSize": 2
    },
    "[makefile]": {
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[xml]": {
        "editor.tabSize": 2
    },
    // https://github.com/VSCodeVim/Vim/#key-remapping
    "vim.handleKeys": {
        "<C-w>": false // Let VSCode handle this
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "alignment.surroundSpace": {
        "colon":   [-1, 1],
        "comment": 2
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    // Rust (Not currently used)
    "rust-client.revealOutputChannelOn": "info",
    "rust-client.engine": "rust-analyzer",
    // Rust-Analyzer (alternative to Rust)
    "rust-analyzer.inlayHints.typeHints": false,
    "rust-analyzer.inlayHints.parameterHints": false,
    // Ruby
    "ruby.useLanguageServer": true,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "ledger.binary": "C:\\ProgramData\\chocolatey\\bin\\ledger.exe",
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\tools\\neovim\\Neovim\\bin\\nvim.exe"
}
{
    "telemetry.enableTelemetry": false,
    "editor.fontFamily": "Iosevka Term SS04 Expanded, JetBrains Mono Slashed, monospace",
    "editor.fontSize": 12,
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "editor.rulers": [80, 100],
    "editor.minimap.maxColumn": 100,
    "editor.renderLineHighlight": "gutter",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#36363A",
        "editorIndentGuide.background": "#36363A",
        "editorRuler.foreground": "#36363A"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#606060"
                }
            }
        ]
    },
    "[arm-template]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2
    },
    "[jsonc]": {
        "editor.tabSize": 2
    },
    "[less]": {
        "editor.tabSize": 2
    },
    "[makefile]": {
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[xml]": {
        "editor.tabSize": 2
    },
    // https://github.com/VSCodeVim/Vim/#key-remapping
    "vim.handleKeys": {
        "<C-w>": false // Let VSCode handle this
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "terminal.integrated.shell.windows": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
    "rust-client.revealOutputChannelOn": "info",
    "ruby.useLanguageServer": true,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "window.zoomLevel": 0,
    "ledger.binary": "C:\\ProgramData\\chocolatey\\bin\\ledger.exe"
}